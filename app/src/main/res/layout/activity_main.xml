<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_marginBottom="70dp"
        android:layout_width="fill_parent"
        android:background="#CC3F51B5"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="0dp">
                <ImageView
                    android:id="@+id/background_profile"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/carlyjojackson"
                    > </ImageView>
                <TextView
                    android:id="@+id/edit_coverPhoto"
                    android:layout_marginBottom="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Cover Photo"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/camera"
                    android:gravity="center"
                    android:drawablePadding="8dp"
                    android:layout_gravity="bottom|right"
                    android:padding="10dp"> </TextView>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView

                android:layout_marginTop="220dp"
                app:cardBackgroundColor="#CC3F51B5"
                app:cardCornerRadius="20dp"
                android:layout_width="fill_parent"
                android:layout_height="160dp">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/carlyjojackson"
                            android:scaleType="centerCrop"> </ImageView>
                    </com.google.android.material.card.MaterialCardView>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentEnd="true"
                           android:src="@drawable/edit"> </ImageView>
                       <TextView
                           android:layout_marginTop="10dp"
                           android:id="@+id/username"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/pramod42"
                           android:textColor="@color/white"
                           android:textSize="20sp"
                           android:paddingStart="20dp"
                           android:paddingEnd="10dp"
                           android:padding="10dp"> </TextView>
                       <TextView
                           android:layout_marginTop="40dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/myemail"
                           android:textColor="@color/white"
                           android:textSize="15sp"
                           android:paddingStart="20dp"
                           android:paddingEnd="10dp"
                           android:padding="10dp"> </TextView>
                   </RelativeLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="330dp"
                app:cardCornerRadius="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:padding="10dp"> </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pramod Chaurasiya"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingStart="25dp"
                        android:paddingEnd="10dp"
                        android:backgroundTint="@color/black"
                        android:padding="10dp"> </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingStart="25dp"
                        android:paddingEnd="10dp"
                        android:backgroundTint="@color/black"
                        android:padding="10dp"> </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shohratgart Siddhartnagar"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingStart="25dp"
                        android:paddingEnd="10dp"
                        android:backgroundTint="@color/black"
                        android:padding="10dp"> </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contacts"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:padding="10dp"> </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+91 9628742706"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingStart="25dp"
                        android:paddingEnd="10dp"
                        android:backgroundTint="@color/black"
                        android:padding="10dp"> </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/myemail"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingStart="25dp"
                        android:paddingEnd="10dp"
                        android:backgroundTint="@color/black"
                        android:padding="10dp"> </TextView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="Profile"
    android:background="@drawable/toolbar_bg"
    app:titleTextColor="@color/black"
    android:layout_alignParentTop="true">
</com.google.android.material.appbar.MaterialToolbar>
    <com.google.android.material.button.MaterialButton
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Save"
        android:layout_alignParentBottom="true"> </com.google.android.material.button.MaterialButton>
</RelativeLayout>